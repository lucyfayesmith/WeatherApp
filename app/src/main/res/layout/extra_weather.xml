<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/extra_weather"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#002E3BA1"
    android:orientation="vertical"
    android:paddingStart="32dp"
    android:paddingLeft="32dp"
    android:paddingTop="16dp"
    android:paddingEnd="32dp"
    android:paddingRight="32dp"
    android:paddingBottom="16dp">


    <!--  Sunrise image  -->

    <!--  Sunrise Label  -->

    <!-- Sunrise time -->

    <!--  Sunset Label  -->

    <!-- Sunset Time -->


    <!-- Current Temperature Label -->

    <!-- Current temp value -->

    <ImageView
        android:id="@+id/sunrise_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@+id/sunset_image"
        app:layout_constraintEnd_toStartOf="@+id/sunrise_time"
        app:layout_constraintLeft_toLeftOf="@+id/extra_weather"
        app:layout_constraintTop_toTopOf="@+id/extra_weather"
        app:layout_constraintVertical_bias="0.941"
        app:srcCompat="@drawable/sunrise" />

    <TextView
        android:id="@+id/sunrise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/sunrise_image"
        app:layout_constraintStart_toStartOf="@+id/sunset_time"
        tools:text="6:30am" />

    <ImageView
        android:id="@+id/sunset_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@+id/sunset_time"
        app:layout_constraintLeft_toLeftOf="@+id/extra_weather"
        app:srcCompat="@drawable/sunset"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/sunset_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/sunset_image"
        app:layout_constraintStart_toStartOf="@+id/temp_value"
        tools:text="7:40pm" />

    <TextView
        android:id="@+id/temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/temp_image"
        tools:layout_editor_absoluteX="169dp"
        tools:text="25&#xb0;" />

    <ImageView
        android:id="@+id/temp_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="68dp"
        app:layout_constraintLeft_toLeftOf="@+id/extra_weather"
        app:layout_constraintTop_toBottomOf="@+id/sunset_image"
        app:srcCompat="@drawable/temperature" />


</androidx.constraintlayout.widget.ConstraintLayout>